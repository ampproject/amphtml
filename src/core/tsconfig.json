{
  "compilerOptions" : {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "paths": {
      "#core/mode": ["./mode"],
      "#core/mode/*": ["./mode/*"],
      "#core/constants": ["./constants"],
      "#core/constants/*": ["./constants/*"],
      "#core/types": ["./types"],
      "#core/types/*": ["./types/*"],
    },
  },
  "include": [
    "mode/**/*.js",
    "constants/**/*.js",
    "types/**/*.js",
    "**/*.d.ts"
  ],
  "exclude": [
    "**/*.extern.js",
  ]
}
