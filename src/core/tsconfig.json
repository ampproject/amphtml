{
  "compilerOptions" : {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "es5",
    "lib": ["dom", "esnext", "es6"],
    "paths": {
      "#core/constants": ["./constants"],
      "#core/constants/*": ["./constants/*"],
      "#core/data-structures": ["./data-structures"],
      "#core/data-structures/*": ["./data-structures/*"],
      "#core/mode": ["./mode"],
      "#core/mode/*": ["./mode/*"],
      "#core/types": ["./types"],
      "#core/types/*": ["./types/*"],
    },
  },
  "include": [
    "constants/**/*.js",
    "data-structures/**/*.js",
    "mode/**/*.js",
    "types/**/*.js",
    "**/*.d.ts"
  ],
  "exclude": [
    "**/*.extern.js",
  ]
}
