{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "downlevelIteration": true,
    "target": "es5",
    "strictNullChecks": true,
    "lib": ["dom", "esnext", "es6"],
    "paths": {
      "#core": ["."],
      "#core/*": ["./*"],
    }
  },
  "include": [
    "**/*.js",
    "**/*.d.ts"
  ],
  "exclude": [
    "context/index.js",
    "context/node.js",
    "context/prop.js",
    "context/prop.type.js",
    "context/scan.js",
    "context/scheduler.js",
    "context/subscriber.js",
    "context/values.js",

    "**/*.extern.js"
  ]
}
