{
  "name": "Local AMP",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Run prod AMP pages with the local AMP runtime.",
  "homepage_url": "https://www.ampproject.org",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "16x16.png",
      "48": "48x48.png",
      "128": "128x128.png"
    },
    "default_title": "AMP Local Proxy",
    "default_popup": "popup.html"
  },
  "permissions": ["webRequest", "webRequestBlocking", "*://*/*"]
}
