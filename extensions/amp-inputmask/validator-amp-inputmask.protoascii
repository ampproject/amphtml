tags: {  # amp-inputmask
  html_format: AMP
  tag_name: "SCRIPT"
  extension_spec: {
    name: "amp-inputmask"
    version: "0.1"
    version: "latest"
    # amp-inputmask has no associated tag which indicates usage of the extension.
    # TODO(gregable): Implement a mechanism to associate attributes with
    # extension usage and then set this to GRANDFATHERED or ERROR.
    requires_usage: NONE
  }
  attr_lists: "common-extension-attrs"
}
# The input element is also defined by validator/validator-main.protoascii
tags: {
  html_format: AMP
  tag_name: "INPUT"
  spec_name: "input [mask]"
  requires_extension: "amp-inputmask"
  attrs: {
    name: "mask"
    mandatory: true
    dispatch_key: NAME_DISPATCH
  }
  attrs: {
    name: "mask-output"
    trigger: {
      also_requires_attr: "mask"
    }
  }
  attrs: {
    name: "type"
    value: "text"
    value: "tel"
    value: "search"
  }
  attr_lists: "input-common-attr"
  attr_lists: "input-name-attr"
  attrs: { name: "[type]" }
  spec_url: "https://www.ampproject.org/docs/reference/components/amp-inputmask"
}
