tags: {  # amp-image-slider
  html_format: AMP
  tag_name: "SCRIPT"
  extension_spec: {
    name: "amp-image-slider"
    version: "0.1"
    version: "latest"
  }
  attr_lists: "common-extension-attrs"
}
tags: {  # <amp-image-slider>
  html_format: AMP
  html_format: EXPERIMENTAL
  tag_name: "AMP-IMAGE-SLIDER"
  requires_extension: "amp-image-slider"
  attr_lists: "extended-amp-global"
  attrs: {
    name: "disabled"
    value: ""
  }
  attrs: {
    name: "disable-hint"
    value: ""
  }
  attrs: {
    name: "step-size"
    value_regex: "0|1|(0\.[0-9]+)"
  }
  # <amp-bind>
  attrs: {
    name: "[disabled]"
    value: ""
  }
  spec_url: "https://www.ampproject.org/docs/reference/components/amp-image-slider"
  amp_layout: {
    supported_layouts: FIXED
    supported_layouts: FIXED_HEIGHT
    supported_layouts: FLEX_ITEM
    supported_layouts: INTRINSIC
    supported_layouts: NODISPLAY
    supported_layouts: RESPONSIVE
  }
  child_tags: {
    child_tag_name_oneof: "AMP-IMG"
    child_tag_name_oneof: "DIV"
    mandatory_min_num_child_tags: 2
  }
}
tags: {
  html_format: AMP
  tag_name: "DIV"
  spec_name: "AMP-IMAGE-SLIDER [before]"
  mandatory_parent: "AMP-IMAGE-SLIDER"
  attrs: {
    name: "before"
    mandatory: true
  }
  spec_url: "https://www.ampproject.org/docs/reference/components/amp-live-list#items"
}
tags: {
  html_format: AMP
  tag_name: "DIV"
  spec_name: "AMP-IMAGE-SLIDER [after]"
  mandatory_parent: "AMP-IMAGE-SLIDER"
  attrs: {
    name: "after"
    mandatory: true
  }
  spec_url: "https://www.ampproject.org/docs/reference/components/amp-live-list#items"
}
tags: {
  html_format: AMP
  tag_name: "DIV"
  spec_name: "AMP-IMAGE-SLIDER [hint]"
  mandatory_parent: "AMP-IMAGE-SLIDER"
  attrs: {
    name: "hint"
    mandatory: true
  }
  attrs: { name: "hint-loop" value: "" }
  attrs: {
    name: "hint-inactive-interval"
    value_regex: "[0-9]+"
  }
  spec_url: "https://www.ampproject.org/docs/reference/components/amp-live-list#items"
}