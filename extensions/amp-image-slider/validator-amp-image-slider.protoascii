tags: {  # amp-image-slider
  html_format: AMP
  tag_name: "SCRIPT"
  spec_name: "amp-image-slider extension .js script"
  satisfies: "amp-image-slider extension .js script"
  requires: "amp-image-slider"
  mandatory_parent: "HEAD"
  unique: true
  attrs: {
    name: "async"
    mandatory: true
    value: ""
  }
  attrs: {
    name: "custom-element"
    mandatory: true
    value: "amp-image-slider"
    dispatch_key: true
  }
  attrs: { name: "nonce" }
  attrs: {
    name: "src"
    mandatory: true
    value_regex: "https://cdn\.ampproject\.org/v0/amp-image-slider-(latest|0\.1).js"
  }
  attrs: {
    name: "type"
    value: "text/javascript"
  }
  cdata: {
    blacklisted_cdata_regex: {
      regex: "."
      error_message: "contents"
    }
  }
  spec_url: "https://www.ampproject.org/docs/reference/components/amp-image-slider"
}
tags: {  # <amp-image-slider>
  html_format: AMP
  tag_name: "AMP-IMAGE-SLIDER"
  satisfies: "amp-image-slider"
  requires: "amp-image-slider extension .js script"
  attrs: {
    name: "type"
    value_regex: "follow|drag"
  }
  attr_lists: "extended-amp-global"
  spec_url: "https://www.ampproject.org/docs/reference/components/amp-image-slider"
  amp_layout: {
    supported_layouts: FIXED
    supported_layouts: FIXED_HEIGHT
    supported_layouts: FLEX_ITEM
    supported_layouts: INTRINSIC
    supported_layouts: NODISPLAY
    supported_layouts: RESPONSIVE
  }
}
