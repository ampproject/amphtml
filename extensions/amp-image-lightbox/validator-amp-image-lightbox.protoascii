tags: {  # <amp-image-lightbox>
  html_format: AMP
  html_format: AMP4EMAIL
  tag_name: "AMP-IMAGE-LIGHTBOX"
  requires_extension: "amp-image-lightbox"
  # Support dimensions / sizes / etc. like an amp-lightbox.
  attrs: { name: "controls" }
  attr_lists: "extended-amp-global"
