tags: {  # amp-sidebar
  html_format: AMP
  tag_name: "SCRIPT"
  extension_spec: {
    name: "amp-sidebar"
    allowed_versions: "0.1"
    allowed_versions: "latest"
    requires_usage: DEPRECATED_WARNING
    deprecated_allow_duplicates: true
  }
  attr_lists: "common-extension-attrs"
}
tags: {  # <amp-sidebar>
  html_format: AMP
  tag_name: "AMP-SIDEBAR"
  mandatory_parent: "BODY"
  disallowed_ancestor: "AMP-SIDEBAR"
  requires_extension: "amp-sidebar"
  attrs: {
    name: "side"
    value_regex: "(left|right)"
  }
  attr_lists: "extended-amp-global"
  amp_layout: {
    supported_layouts: NODISPLAY
  }
}
tags: {  # amp-sidebar > nav
  html_format: AMP
  tag_name: "NAV"
  spec_name: "amp-sidebar > nav"
  mandatory_parent: "AMP-SIDEBAR"
  attrs: {
    name: "toolbar"
    mandatory: true
  }
  attrs: {
    name: "toolbar-target"
    mandatory: true
  }
  child_tags: {
    mandatory_num_child_tags: 1
    child_tag_name_oneof: "UL"
  }
}
