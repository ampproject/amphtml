tags: {  # amp-sidebar
  html_format: AMP
  tag_name: "SCRIPT"
  mandatory_parent: "HEAD"
  spec_name: "amp-sidebar extension .js script"
  unique_warning: true
  extension_unused_unless_tag_present: "amp-sidebar"
  attrs: {
    name: "async"
    mandatory: true
    value: ""
  }
  attrs: {
    name: "custom-element"
    mandatory: true
    value: "amp-sidebar"
    dispatch_key: true
  }
  attrs: { name: "nonce" }
  attrs: {
    name: "src"
    value_regex: "https://cdn\\.ampproject\\.org/v0/amp-sidebar-(latest|0\\.1).js"
    mandatory: true
  }
  attrs: {
    name: "type"
    value_casei: "text/javascript"
  }
  cdata: {
    blacklisted_cdata_regex: {
      regex: "."
      error_message: "contents"
    }
  }
  spec_url: "https://www.ampproject.org/docs/reference/extended/amp-sidebar.html"
}
tags: {  # <amp-sidebar>
  html_format: AMP
  tag_name: "AMP-SIDEBAR"
  unique: true
  mandatory_parent: "BODY"
  disallowed_ancestor: "AMP-SIDEBAR"
  also_requires_tag: "amp-sidebar extension .js script"
  attrs: {
    name: "side"
    value_regex: "(left|right)"
  }
  attr_lists: "extended-amp-global"
  spec_url: "https://www.ampproject.org/docs/reference/extended/amp-sidebar.html"
  amp_layout: {
    supported_layouts: NODISPLAY
  }
}
