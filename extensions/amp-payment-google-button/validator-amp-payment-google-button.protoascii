tags: {  # amp-payment-google-button
  html_format: ACTIONS
  tag_name: "SCRIPT"
  extension_spec: {
    name: "amp-payment-google-button"
    version: "0.1"
    version: "latest"
  }
  attr_lists: "common-extension-attrs"
}
tags: {  # <amp-payment-google-button> (json)
  html_format: ACTIONS
  tag_name: "SCRIPT"
  spec_name: "amp-payment-google-button extension .json script"
  requires_extension: "amp-payment-google-button"
  mandatory_parent: "AMP-PAYMENT-GOOGLE-BUTTON"
  attrs: {
    name: "type"
    mandatory: true
    value_casei: "application/json"
    dispatch_key: NAME_VALUE_PARENT_DISPATCH
  }
  attr_lists: "name-attr"
  attr_lists: "nonce-attr"
  cdata: {
    disallowed_cdata_regex: {
      regex: "<!--"
      error_message: "html comments"
    }
  }
}
tags: {  # <amp-payment-google-button>
  html_format: ACTIONS
  tag_name: "AMP-PAYMENT-GOOGLE-BUTTON"
  requires_extension: "amp-payment-google-button"
  attrs: {
    name: "is-test-mode"
    value_casei: "false"
    value_casei: "true"
  }
  attrs: {
    name: "render_only_if_payment_method_present"
    value_casei: "false"
    value_casei: "true"
  }
  child_tags: {
    mandatory_min_num_child_tags: 1
    child_tag_name_oneof: "SCRIPT"
  }
}
