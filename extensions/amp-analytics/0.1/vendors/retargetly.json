{
  "requests": {
    "host": "https://api.retargetly.com",
    "page": "${host}/api?id=${accountId}&src=${sourceId}&url=${sourceUrl}&n=${title}&ref=${documentReferrer}&ua=${userAgent}&random=${random}&bl=${browserLanguage}&source=amp"
  },
  "transport": {
    "beacon": false,
    "xhrpost": false,
    "image": true
  },
  "triggers": {
    "trackPageview": {
      "on": "visible",
      "request": "page"
    }
  }
}
