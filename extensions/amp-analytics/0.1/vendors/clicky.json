{
  "vars": {
    "site_id": ""
  },
  "requests": {
    "base": "https://in.getclicky.com/in.php?site_id=${site_id}",
    "baseSuffix": "&mime=${contentType}&x=${random}",
    "pageview": "${base}&res=${screenWidth}x${screenHeight}&lang=${browserLanguage}&secure=1&type=pageview&href=${canonicalPath}&title=${title}&ref=${documentReferrer}${baseSuffix}",
    "interval": "${base}&type=ping${baseSuffix}"
  },
  "triggers": {
    "defaultPageview": {
      "on": "visible",
      "request": "pageview"
    },
    "interval": {
      "on": "timer",
      "timerSpec": {
        "interval": 60,
        "maxTimerLength": 600,
        "immediate": false
      },
      "request": "interval"
    }
  },
  "transport": {
    "beacon": false,
    "xhrpost": false,
    "image": true
  }
}
