{
  "requests":{
    "host": "https://log.cognativex.com",
    "basePrefix": "${host}/pixel.png?kc=pv&cxv=10&apd=${appdomain}&cu=${ampdocUrl}&title=${title}&uid=${clientId(cognativexpixel)&cxnid=undefined&scr=1920x1080|1920x1040|24&cd=${timestamp}&ptd=${pageViewId}",
    "pageview": "${basePrefix}",
    "heartbeat": "${basePrefix}&eg=${incrementalEngagedTime(cognativex-timer)}"
  },
  "triggers": {
    "defaultPageview": {
      "on": "visible",
      "request": "pageview"
    },
    "defaultHeartbeat": {
       "on": "timer",
       "enabled": "${incrementalEngagedTime(cognativex-timer, false)}",
       "timerSpec": {
          "interval": 10,
          "immediate": false,
          "stopSpec": {
            "on": "hidden"
          }
        },
       "request": "heartbeat"
    }
  }
}