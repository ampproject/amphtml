tags: {
  html_format: AMP4EMAIL
  tag_name: "SCRIPT"
  spec_name: "SCRIPT[custom-element=amp-selector] (AMP4EMAIL)"
  extension_spec: {
    name: "amp-selector"
    # AMP4EMAIL doesn't allow version: "latest".
