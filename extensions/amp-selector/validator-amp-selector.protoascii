  html_format: AMP
  html_format: AMP4ADS
  tag_name: "SCRIPT"
  satisfies_condition: "amp-selector 0.1"
  excludes_condition: "amp-selector 1.0"
  extension_spec: {
    name: "amp-selector"
    version_name: "v0.1"
    version: "0.1"
