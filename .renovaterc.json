{
  "extends": ["config:base"],
  "node": {
    "supportPolicy": ["lts_active"]
  },
  "statusCheckVerify": true,
  "ignorePaths": [],

  "commitMessagePrefix": "ðŸ“¦",
  "timezone": "America/Los_Angeles",
  "schedule": "at any time",

  "masterIssue": true,
  "masterIssueApproval": true,
  "reviewers": ["team:@ampproject/build-cop"],

  "separateMinorPatch": true,
  "packageRules": [
    {
      "updateTypes": ["minor"],
      "groupName": "subpackage dependencies"
    },
    {
      "updateTypes": ["patch", "pin"],
      "groupName": "subpackage dependencies"
    },

    {
      "paths": ["src/**"],
      "updateTypes": ["minor"],
      "groupName": "runtime dependencies",
      "reviewers": ["team:@ampproject/wg-runtime"],
      "prBodyNotes": [
        "I've added two members of `@ampproject/wg-runtime` to review this PR."
      ],
      "labels": ["WG: runtime"]
    },
    {
      "paths": ["src/**"],
      "updateTypes": ["patch", "pin"],
      "groupName": "runtime dependencies",
      "reviewers": ["team:@ampproject/wg-runtime"],
      "prBodyNotes": [
        "I've added two members of `@ampproject/wg-runtime` to review this PR."
      ],
      "labels": ["WG: runtime"]
    },

    {
      "paths": ["build-system/**"],
      "updateTypes": ["minor"],
      "groupName": "build system dependencies",
      "reviewers": ["team:@ampproject/wg-infra"],
      "prBodyNotes": [
        "I've added two members of `@ampproject/wg-infra` to review this PR."
      ],
      "labels": ["WG: infra"]
    },
    {
      "paths": ["build-system/**"],
      "updateTypes": ["patch", "pin"],
      "groupName": "build system dependencies",
      "reviewers": ["team:@ampproject/wg-infra"],
      "prBodyNotes": [
        "I've added two members of `@ampproject/wg-infra` to review this PR."
      ],
      "labels": ["WG: infra"]
    },

    {
      "paths": ["validator/**"],
      "updateTypes": ["minor"],
      "groupName": "validator dependencies",
      "reviewers": ["team:@ampproject/wg-caching"],
      "prBodyNotes": [
        "I've added two members of `@ampproject/wg-caching` to review this PR."
      ],
      "labels": ["WG: caching"]
    },
    {
      "paths": ["validator/**"],
      "updateTypes": ["patch", "pin"],
      "groupName": "validator dependencies",
      "reviewers": ["team:@ampproject/wg-caching"],
      "prBodyNotes": [
        "I've added two members of `@ampproject/wg-caching` to review this PR."
      ],
      "labels": ["WG: caching"]
    },

    {
      "paths": ["+(package.json)"],
      "updateTypes": ["minor"],
      "groupName": "core dependencies"
    },
    {
      "paths": ["+(package.json)"],
      "updateTypes": ["patch", "pin"],
      "groupName": "core dependencies"
    },

    {
      "depTypeList": ["dependencies"],
      "enabled": false
    },

    {
      "updateTypes": ["minor", "patch", "pin"],
      "packagePatterns": ["^@ampproject/"],
      "groupName": "ampproject dependencies",
      "depTypeList": ["dependencies", "devDependencies"]
    }
  ]
}
