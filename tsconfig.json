{
  "compilerOptions": {
    "lib": [ 
      "DOM",
      "ESNext"
    ],
    "downlevelIteration": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "incremental": false,
    "esModuleInterop": true,
    "declaration": true,

    "paths": {
      "#3p/*": ["./3p/*"],
      "#ads/*": ["./ads/*"],
      "#build/*": ["./build/*"],

      "#builtins/*": ["./src/builtins/*"],
      "#core/*": ["./src/core/*"],
      "#experiments/*": ["./src/experiments/*"],
      "#inabox/*": ["./src/inabox/*"],
      "#polyfills/*": ["./src/polyfills/*"],
      "#preact/*": ["./src/preact/*"],
      "#purifier/*": ["./src/purifier/*"],
      "#service/*": ["./src/service/*"],

      "#test/*": ["./test/*"],
      "#testing/*": ["./testing/*"],

      "#third_party/*": ["./third_party/*"]
    }
  },
  "include": [
    "./src/core/window/**/*.js",
    "./src/core/error/**/*.js",
    "./src/core/assert/**/*.js",
    // "./src/core/types/**/*.js",
    "./src/core/**/*.d.ts"
  ],
  "exclude": [
    "**/*extern*",
    "node_modules", 
    "dist"
  ]
}
