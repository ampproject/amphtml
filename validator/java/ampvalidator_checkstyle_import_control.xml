<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
        "-//Puppy Crawl//DTD Import Control 1.2//EN"
        "import_control_1_2.dtd">
<!-- This file is used to control the imports in different packages in amp validator-->
<import-control pkg="dev.amp.validator">
    <allow pkg=".*" regex="true" />
    <disallow pkg="org\.slf4j\.*" regex="true"/>
    <subpackage name="css">
        <allow pkg="org\.slf4j\.*" regex="true"/>
    </subpackage>
    <subpackage name="exception">
        <allow pkg="org\.slf4j\.*" regex="true"/>
    </subpackage>
    <subpackage name="parser">
        <allow pkg="org\.slf4j\.*" regex="true"/>
    </subpackage>
    <subpackage name="utils">
        <allow pkg="org\.slf4j\.*" regex="true"/>
    </subpackage>
    <subpackage name="visitor">
        <allow pkg="org\.slf4j\.*" regex="true"/>
    </subpackage>
</import-control>