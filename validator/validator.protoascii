# 4.11 Scripting
# 4.11.1 The script element
# Only the amphtml script and the LD/JSON description are allowed / mandatory.
# The AMP Engine is the first in this specfile so that the 'development'
# attribute shows up as the disallowed attribute instead of 'src' for a
# development flagged AMP engine script.
# Note that validator.js finds and modifies this rule, by looking for
# detail == "amphtml engine v0.js script".
tags: {
  name: "script"
  mandatory: true
  mandatory_parent: "head"
  unique: true
  detail: "amphtml engine v0.js script"
  spec_url: "https://github.com/ampproject/amphtml/blob/master/spec/amp-html-format.md#scrpt"
  attrs: {
    name: "src"
    mandatory: true
    # TODO(johannes): Tighten this down.
    value_regex: "https://cdn\\.ampproject\\.org/v\\d+\\.js|"
    "https://ssl\\.gstatic\\.com/amphtml/v\\d+\\.js|"
    "https://www\\.gstatic\\.com/amphtml/v\\d+\\.js"
  }
  attrs: {
    name: "async"
    value: ""
    mandatory: true
  }
  attrs: {
    name: "development"
    value: ""
    dev_mode_enabled: "please remove for prod"
    dev_mode_enabled_url: "https://github.com/ampproject/amphtml/blob/master/spec/amp-html-format.md#amp-runtime"
  }
}
tags: {
  name: "script"
  mandatory_parent: "head"
  attrs: {
    name: "type"
    mandatory: true
    value: "application/ld+json"
  }
}
