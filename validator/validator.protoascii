  }
  blacklisted_cdata_regex: {
    regex: "@import"
    error_message: "CSS @import"
  }
  blacklisted_cdata_regex: {
    regex: "@namespace"
    error_message: "CSS @namespace"
  }
  blacklisted_cdata_regex: {
