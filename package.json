{
  "private": true,
  "name": "amp-html",
  "version": "0.1.0",
  "description": "Fastish HTML",
  "main": "index.js",
  "engines": {
    "node": "^8.0.0",
    "yarn": "^1.3.2"
  },
  "author": "The AMP HTML Authors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ampproject/amphtml.git"
  },
  "scripts": {
    "test": "gulp test && gulp ava && node node_modules/jest/bin/jest.js",
    "ava": "gulp ava",
    "lint": "gulp lint",
    "build": "gulp build",
    "dist": "gulp dist",
    "heroku-postbuild": "npm run test-env-var && gulp clean && gulp build && gulp dist --fortesting",
    "test-env-var": "if [ -z \"${AMP_TESTING_HOST}\" ]; then echo \"ERROR: Please set the 'AMP_TESTING_HOST' environment variable. If you are in heroku this can be set by executing 'heroku config:set AMP_TESTING_HOST=my-heroku-subdomain.herokuapp.com' on the command line.\"; exit 1; fi",
    "preinstall": "node build-system/check-package-manager.js"
  },
  "dependencies": {
    "babel-plugin-istanbul": "4.1.6",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-remove-strict-mode": "0.0.2",
    "babel-preset-env": "^1.7.0",
    "babelify": "^8.0.0",
    "baconipsum": "^0.1.2",
    "bin-version-check": "^3.0.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "browserify": "^16.2.2",
    "bundlesize": "^0.17.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cli-highlight": "^2.0.0",
    "codecov": "3.0.4",
    "connect-header": "0.0.5",
    "eslint-plugin-amphtml-internal": "file:build-system/eslint-rules",
    "eslint-plugin-chai-expect": "^1.1.1",
    "eslint-plugin-eslint-plugin": "^1.4.0",
    "eslint-plugin-google-camelcase": "0.0.2",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-jsdoc": "3.7.1",
    "json5": "1.0.1",
    "karma": "^2.0.4",
    "karma-babel-preprocessor": "^7.0.0",
    "karma-browserify": "^5.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "text-table": "0.2.0",
    "through2": "2.0.3",
    "topological-sort": "0.2.0",
    "touch": "3.1.0",
  },
  "ava": {
    "files": [
      "build-system/tasks/**/{test,test-*}.js"
    ],
    "concurrency": 5,
    "tap": true,
    "failFast": true
  },
  "jest": {
    "testRegex": "./build-system/babel-plugins/[^/]+/test/.+\\.m?js$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./build-system/babel-plugins/testSetupFile.js",
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "/test/fixtures/",
      "<rootDir>/build/"
    ],
    "reporters": ["jest-dot-reporter"]
  }
}
